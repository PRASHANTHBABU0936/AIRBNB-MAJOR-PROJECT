<% layout("layouts/boilerplate") -%> 
<!-- <body> -->
  <!-- <h3>All Listings</h3>// -->

  <!-- Card Grid -->
   <style>
#filters{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
/* CHANGED: Better card image styling */
.listing-card img {
  width: 100%;
  height: 250px;
  object-fit: cover;
  border-radius: 0.5rem;
}

.filter{
  text-align: center;
  margin-right: 3rem;
  margin-top: 2rem;
  opacity: 0.7;
}
.filter:hover{
  opacity: 1;
  cursor: pointer;
}

.filter p {
  font-size: 0.8rem;
}
.tax-info{
  display:none;
}
.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.5rem;
  padding: 1rem;
  margin-left: auto;   /* CHANGED: Aligns it to the right end of the row */
  display: flex;
  align-items: center;
}

   </style>

<!-- CHANGED: Added container around filters + cards -->
<div class="container mt-4">  

  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
     <P>Trending</P> 
    </div>

     <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
     <P>Rooms</P> 
    </div>

     <!-- FIXED: fa-mountain-city doesn't exist in free FA -->
     <div class="filter">
        <div><i class="fa-solid fa-city"></i></div> <!-- CHANGED -->
        <P>Iconic cities</P> 
     </div>

     <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
     <P>Mountains</P> 
    </div>

     <!-- FIXED: fa-castle is pro -->
     <div class="filter">
        <div><i class="fa-solid fa-landmark"></i></div> <!-- CHANGED -->
        <P>Castles</P> 
    </div>

     <div class="filter">
        <div><i class="fas fa-swimming-pool"></i></div>
        <P>Amazing Pools</P> 
    </div>

      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <P>Camping</P> 
    </div>

     <!-- FIXED: fa-farm doesn't exist -->
     <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div> <!-- CHANGED -->
        <P>Farms</P> 
    </div>

     <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div> <!-- CHANGED -->
        <P>Arctic </P> 
     </div>

    <div class="tax-toggle">
      <div>
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
        </div>
      </div>
    </div>
  </div> <!-- CHANGED: Closed filters div properly -->

  <!-- Card Grid Section -->
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-3">
    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card h-100 listing-card">
           <!-- CHANGED: Added Cloudinary transform + fixed style -->
            <img 
              src="<%= listing.image.url.replace('/upload', '/upload/w_600,h_400,c_fill') %>" 
              class="card-img-top" 
              alt="listing image" 
              style="width: 100%; height: 20rem; object-fit: cover; border-radius: 0.5rem;">
            <div class="card-img-overlay">abcd</div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
             <i class="tax-info">  &nbsp;&nbsp; +18%GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div> <!-- card grid ends -->

</div> <!-- CHANGED: closed container -->

  <script>
    let taxSwitch=document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
      let taxInfo=document.getElementsByClassName("tax-info");
      for(info of taxInfo) {
        if(info.style.display != "inline"){
          info.style.display="inline";
        }
        else{info.style.display="none";}
      }
    })
  </script>
